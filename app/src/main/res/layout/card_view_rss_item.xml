<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:animateLayoutChanges="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rss_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:ellipsize="end"
                android:maxHeight="@dimen/card_view_rss_item_description_height"
                android:maxLines="5"
                android:paddingLeft="@dimen/card_view_rss_item_description_padding_end"
                android:paddingRight="@dimen/card_view_rss_item_description_padding_start"
                android:scaleType="centerCrop"
                android:textSize="@dimen/card_view_rss_item_description_size" />

            <ImageView
                android:id="@+id/rss_item_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:maxHeight="@dimen/card_view_rss_item_image_height"
                android:paddingLeft="@dimen/card_view_rss_item_image_padding_end"
                android:paddingRight="@dimen/card_view_rss_item_image_padding_start"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <TextView
            android:id="@+id/rss_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="@dimen/card_view_rss_item_text_padding_end"
            android:paddingRight="@dimen/card_view_rss_item_text_padding_start"
            android:paddingTop="5dp"
            android:textColor="@color/rss_item"
            android:textSize="@dimen/card_view_rss_item_text_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>
